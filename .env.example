# ============================================================================
# CIRCUIT BREAKER CONFIGURATION
# ============================================================================
ENABLE_CIRCUIT_BREAKER=true
# Enable emergency circuit breaker system

TRADE_FAILURE_HALT_HOURS=48
# Hours to halt trading after critical failure
# Set to 0 to disable automatic halt
# Recommended: 24-72 hours

CONSECUTIVE_LOSSES_THRESHOLD=5
