# simulation: No real orders, tracks theoretical P&L
# live: Places actual orders on exchange

INITIAL_CAPITAL=20
# Starting capital in USDT

BASE_CURRENCY=USDT
# Base currency for all trades

TRADING_PAIRS=BTCUSDT,ETHUSDT,SOLUSDT
# Comma-separated list of trading pairs

# ============================================================================
# POSITION SIZING CONFIGURATION
# ============================================================================
POSITION_SIZE_PERCENT=10
# Percentage of capital to risk per trade (1-100)

MAX_LEVERAGE=10
# Maximum leverage allowed per position

MIN_POSITION_SIZE=1
# Minimum position size in USDT

MAX_POSITION_SIZE=1000
# Maximum position size in USDT

MAX_OPEN_POSITIONS=5
# Maximum number of concurrent positions

# ============================================================================
# RISK MANAGEMENT CONFIGURATION
# ============================================================================
STOP_LOSS_PERCENT=2
# Stop loss as percentage of entry price

TRAILING_STOP_ACTIVATION=5
# Profit percentage at which trailing stop activates

TRAILING_STOP_DISTANCE=2
# Distance of trailing stop from peak (percentage)

MAX_DAILY_LOSS_PERCENT=5
