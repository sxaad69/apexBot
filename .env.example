TELEGRAM_DAILY_SUMMARY=true
# Send daily performance summary

TELEGRAM_DAILY_SUMMARY_TIME=00:00
# Time for daily summary (HH:MM format, 24-hour)

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_API_CALLS=true
# Log every API request/response

LOG_POSITION_REJECTIONS=true
