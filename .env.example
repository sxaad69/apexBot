# ============================================================================
# APEX HUNTER V14 - COMPLETE ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control

# ============================================================================
# EXCHANGE CONFIGURATION
# ============================================================================
EXCHANGE_ENVIRONMENT=testnet
# Options: testnet | production

# Futures Trading Exchange
FUTURES_EXCHANGE=kucoin
# Which exchange to use for futures trading

# Spot Trading Exchange  
SPOT_EXCHANGE=binance
# Which exchange to use for spot trading/logging

# Arbitrage Configuration
ARBITRAGE_MODE=select
# Options: auto | select | off
# auto - Use all exchanges with valid credentials
# select - Use only exchanges listed in ARBITRAGE_EXCHANGES
# off - Disable arbitrage scanner

ARBITRAGE_EXCHANGES=binance,kucoin,bybit,okx,gate,huobi,kraken,coinbase,bitget,mexc
# Comma-separated list of exchanges for arbitrage scanning

# ============================================================================
# EXCHANGE API CREDENTIALS
# ============================================================================
# Only add credentials for exchanges you want to use

# Binance
BINANCE_API_KEY=
BINANCE_API_SECRET=

# KuCoin
KUCOIN_API_KEY=
KUCOIN_API_SECRET=
KUCOIN_API_PASSPHRASE=

# Bybit
BYBIT_API_KEY=
BYBIT_API_SECRET=

# OKX
OKX_API_KEY=
OKX_API_SECRET=
OKX_API_PASSPHRASE=

# Gate.io
GATE_API_KEY=
GATE_API_SECRET=

# Huobi
HUOBI_API_KEY=
HUOBI_API_SECRET=

# Kraken
KRAKEN_API_KEY=
KRAKEN_API_SECRET=

# Coinbase
COINBASE_API_KEY=
COINBASE_API_SECRET=

# Bitget
BITGET_API_KEY=
BITGET_API_SECRET=
BITGET_API_PASSPHRASE=

# MEXC
MEXC_API_KEY=
MEXC_API_SECRET=

# ============================================================================
# MASTER TRADING CONTROLS (Triple Safety Lock System)
# ============================================================================
# CRITICAL: Even on production environment, bot will NOT trade
# unless these are explicitly set to "yes"
# Default "no" = Safe simulation/logging mode

FUTURES_TRADING_ENABLED=no
# Set to "yes" to enable actual futures trading
# "no" = Log opportunities only, no real trades

SPOT_TRADING_ENABLED=no
# Set to "yes" to enable actual spot trading
# "no" = Log signals only, no real trades

ARBITRAGE_TRADING_ENABLED=no
# Set to "yes" to enable actual arbitrage execution
# "no" = Log opportunities only, no real trades

# ============================================================================
# TELEGRAM NOTIFICATIONS (3 Separate Bots)
# ============================================================================
# Futures Trading Bot
TELEGRAM_FUTURES_ENABLED=true
TELEGRAM_FUTURES_BOT_TOKEN=
TELEGRAM_FUTURES_CHAT_ID=

# Spot Trading Bot
TELEGRAM_SPOT_ENABLED=true
TELEGRAM_SPOT_BOT_TOKEN=
TELEGRAM_SPOT_CHAT_ID=

# Arbitrage Scanner Bot
TELEGRAM_ARBITRAGE_ENABLED=true
TELEGRAM_ARBITRAGE_BOT_TOKEN=
TELEGRAM_ARBITRAGE_CHAT_ID=

# ============================================================================
# FUTURES TRADING CONFIGURATION
# ============================================================================
FUTURES_VIRTUAL_CAPITAL=100
# Virtual capital allocated for futures trading (USDT)

FUTURES_POSITION_SIZE_PERCENT=10
# Percentage of capital to risk per trade (1-100)

FUTURES_MAX_LEVERAGE=10
# Maximum leverage allowed per position

FUTURES_STOP_LOSS_PERCENT=2
# Stop loss as percentage of entry price

FUTURES_TAKE_PROFIT_PERCENT=4
# Take profit as percentage of entry price

FUTURES_MAX_DAILY_LOSS_PERCENT=5
# Maximum daily loss before halting trading

FUTURES_MAX_DRAWDOWN_PERCENT=15
# Maximum drawdown from peak before halting

FUTURES_MAX_OPEN_POSITIONS=5
# Maximum number of concurrent positions

# Futures Trading Pairs
FUTURES_PAIRS=BTC/USDT,ETH/USDT,SOL/USDT

# ============================================================================
# SPOT TRADING CONFIGURATION (Strategy Validation)
# ============================================================================
ENABLE_SPOT_LOGGER=true
# Enable spot trading simulation/logging

SPOT_VIRTUAL_CAPITAL=100
# Virtual capital for spot trading (USDT)

SPOT_POSITION_SIZE_PERCENT=10
# Same as futures for fair comparison

SPOT_STOP_LOSS_PERCENT=2
# Same as futures

SPOT_TAKE_PROFIT_PERCENT=4
# Same as futures

SPOT_USE_FULL_RISK_SYSTEM=true
# Use all 11 risk layers (minus leverage control)

SPOT_MAX_DAILY_LOSS_PERCENT=5
SPOT_MAX_DRAWDOWN_PERCENT=15

# Spot Trading Pairs
SPOT_PAIRS=BTC/USDT,ETH/USDT,SOL/USDT

# Spot Telegram Notifications
SPOT_LOG_SIGNALS=true
SPOT_DAILY_SUMMARY=true
SPOT_DAILY_SUMMARY_TIME=00:00

# ============================================================================
# ARBITRAGE SCANNER CONFIGURATION
# ============================================================================
ENABLE_ARBITRAGE_SCANNER=true
# Enable arbitrage opportunity detection

ARBITRAGE_VIRTUAL_CAPITAL=100
# Virtual capital for arbitrage calculation (USDT)

# Arbitrage Types (enable/disable each)
ARBITRAGE_SIMPLE=true
# Cross-exchange price differences (Buy low, Sell high)

ARBITRAGE_TRIANGULAR=true
# Same-exchange triangular arbitrage

ARBITRAGE_CROSS_TRIANGULAR=false
# Cross-exchange triangular (advanced, disabled by default)

# Arbitrage Parameters
ARBITRAGE_MIN_PROFIT_PERCENT=2.0
# Minimum profit AFTER all fees (2% recommended)

ARBITRAGE_CHECK_INTERVAL=30
# Check for opportunities every N seconds

ARBITRAGE_INCLUDE_ALL_FEES=true
# Include trading, withdrawal, network, and slippage fees

ARBITRAGE_MIN_VOLUME=10000
# Minimum 24h volume in USDT for liquidity

# Arbitrage Trading Pairs
ARBITRAGE_PAIRS=BTC/USDT,ETH/USDT,SOL/USDT,BNB/USDT,XRP/USDT,ADA/USDT,DOGE/USDT,MATIC/USDT,DOT/USDT,AVAX/USDT

# Arbitrage Telegram Notifications
ARBITRAGE_LOG_TOP_N_PER_HOUR=5
# Only log top 5 opportunities per hour to avoid spam

ARBITRAGE_DAILY_SUMMARY=true
ARBITRAGE_DAILY_SUMMARY_TIME=00:00

# ============================================================================
# STRATEGY CONFIGURATION
# ============================================================================
# All 4 Strategy A variants run simultaneously

# Strategy A1: EMA Only
STRATEGY_A1_ENABLED=true
STRATEGY_A1_EMA_FAST=9
STRATEGY_A1_EMA_SLOW=21
STRATEGY_A1_EMA_TREND=50

# Strategy A2: EMA + RSI + Volume
STRATEGY_A2_ENABLED=true
STRATEGY_A2_EMA_FAST=9
STRATEGY_A2_EMA_SLOW=21
STRATEGY_A2_EMA_TREND=50
STRATEGY_A2_RSI_PERIOD=14
STRATEGY_A2_RSI_LOW=40
STRATEGY_A2_RSI_HIGH=70
STRATEGY_A2_VOLUME_MULTIPLIER=1.2

# Strategy A3: EMA + ATR
STRATEGY_A3_ENABLED=true
STRATEGY_A3_EMA_FAST=9
STRATEGY_A3_EMA_SLOW=21
STRATEGY_A3_EMA_TREND=50
STRATEGY_A3_ATR_PERIOD=14
STRATEGY_A3_ATR_MULTIPLIER=2.0

# Strategy A4: Multi-Timeframe EMA
STRATEGY_A4_ENABLED=true
STRATEGY_A4_TIMEFRAME_HIGH=4h
STRATEGY_A4_TIMEFRAME_LOW=15m
STRATEGY_A4_EMA_TREND=50

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_PATH=data/apex_hunter.db
