# ============================================================================
# BACKTESTING CONFIGURATION
# ============================================================================
BACKTEST_DATA_PATH=data/historical
# Directory for historical price data

BACKTEST_DEFAULT_PERIOD=6M
# Default backtest period (1W, 1M, 3M, 6M, 1Y)

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=INFO
# Options: DEBUG | INFO | WARNING | ERROR | CRITICAL

LOG_FILE_PATH=logs
# Directory for log files

LOG_ROTATION=daily
# Log file rotation: daily | weekly | size

LOG_MAX_BYTES=10485760
# Max log file size (10MB) before rotation

LOG_BACKUP_COUNT=30
# Number of backup log files to keep

# ============================================================================
# SYSTEM CONFIGURATION
# ============================================================================
HEARTBEAT_INTERVAL=60
# System heartbeat check interval (seconds)

HEALTH_CHECK_ENABLED=true
# Enable health monitoring

HEALTH_CHECK_INTERVAL=300
# Health check interval (seconds)

