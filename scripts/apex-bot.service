[Unit]
Description=Apex Hunter V14 Trading Bot
After=network.target

[Service]
# User should replace 'ubuntu' with their actual username if different
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/apexBot
EnvironmentFile=/home/ubuntu/apexBot/.env
ExecStart=/home/ubuntu/apexBot/venv/bin/python3 main.py
Restart=always
RestartSec=10
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=apex-bot

[Install]
WantedBy=multi-user.target
